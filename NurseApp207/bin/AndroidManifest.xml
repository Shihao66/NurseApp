<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nurseapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.nurseapp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.nurseapp.Patients"
            android:label="@string/title_activity_patients" >
        </activity>
        <activity
            android:name="com.example.nurseapp.RecordsActivity"
            android:label="@string/title_activity_records" >
        </activity>
        <activity
            android:name="com.example.nurseapp.AddPatientActivity"
            android:label="@string/title_activity_add_patient" >
        </activity>
        <activity
            android:name="com.example.nurseapp.AllPatientsActivity"
            android:label="@string/title_activity_all_patients" >
        </activity>
        <activity
            android:name="com.example.nurseapp.UpdateVitalSignsActivity"
            android:label="@string/title_activity_update_vital_signs" >
        </activity>
    </application>

</manifest>
